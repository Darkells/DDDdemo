<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.darken.ddddemo.infrastructure.db.mapper.LocationMapper">

	<select id="byCode"
		resultType="com.darken.ddddemo.infrastructure.db.dataObject.LocationDo">
		SELECT *
		FROM
		     ddd_location
		WHERE true
		<if test="code != null and code != ''">
			code = #{code}
		</if>
	</select>

</mapper>